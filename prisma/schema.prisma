generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int   @id @default(autoincrement())
  name      String
  email     String   @unique
  password Password?
  role_id Int
  role Role @relation(fields: [role_id], references: [id])
}

model Password{
  hash String
  user_id Int @unique
  user User @relation(fields: [user_id], references: [id])
}

model Role{
  id Int @id @default(autoincrement())
  name String @unique
  users User[]
  permissions Permission[]
}

model Permission{
  id Int @id @default(autoincrement())
  name String @unique
  roles Role[]
}
